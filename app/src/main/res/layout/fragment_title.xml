<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#B39F66"
    android:layout_height="match_parent"
    tools:context=".Screen.TitleF">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="FlagGame!"
    android:textSize="23sp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_marginBottom="8sp"/>


<androidx.cardview.widget.CardView
android:layout_width="350dp"
android:layout_height="250dp"
android:background="#BD920F"
app:cardCornerRadius="20dp"
android:layout_marginStart="11dp"
android:layout_marginEnd="11sp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wellcom"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"

        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint=" Enter your Name"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/btn_start"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="37sp"
        android:layout_marginBottom="9sp"
        android:background="@drawable/button_bg"
        android:paddingStart="35sp"
        android:paddingTop="5sp"
        android:paddingEnd="20sp"
        android:text="Start"
        android:textColor="@color/black"
        android:textSize="21sp" />


</LinearLayout>
</androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>